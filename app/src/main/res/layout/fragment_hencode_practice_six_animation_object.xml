<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <test.cn.example.com.androidskill.view.defineView.hencoder.practice_six.CustomProgressView
        android:id="@+id/iv"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal" />

    <test.cn.example.com.androidskill.view.defineView.hencoder.practice_six.FlipBoardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"/>

    <test.cn.example.com.androidskill.view.defineView.hencoder.practice_six.CustomFlipBoardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"/>
        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="8sp"
            android:text="start"/>
        <Button
            android:id="@+id/btn_flipboard"
            android:layout_marginLeft="10dp"
            android:textSize="8sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flipboard"/>
    </LinearLayout>
</LinearLayout>
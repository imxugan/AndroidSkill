<?xml version="1.0" encoding="utf-8"?>
<test.cn.example.com.androidskill.ui.compact.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="按钮"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="textview"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="按钮"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="按钮"/>
    </LinearLayout>
</test.cn.example.com.androidskill.ui.compact.CustomScrollView>
